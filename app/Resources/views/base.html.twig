<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

        <title>{% block title %}Buzz&#8482;{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% endblock %}

        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('favicon-96x96.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
    </head>
    <body>
        {% block body %}
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand no-padding" href="{{ path('default_index') }}"><img width="50" height="50" src="{{ asset('favicon-96x96.png') }}" /></a>
                        <a class="navbar-brand" href="{{ path('default_index') }}">Buzz&#8482;</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active">
                                <a href="{{ path('default_index') }}">Incidents</a>
                            </li>
                            <li>
                                <a href="{{ path('statistics_index') }}">Statistics</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a>
                                    <i class="glyphicon glyphicon-user"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container container-wrapper">
                {% block container %}
                <div class="row">
                    <div class="col-xs-12 col-md-8">
                        {% block center %}
                        {% endblock %}
                    </div>
                    <div class="col-xs-12 col-md-4">
                        {% block right %}
                            {{ render(controller('AppBundle:Default:firefighter')) }}
                        {% endblock %}
                    </div>
                </div>
                {% endblock %}
            </div>

            <footer class="navbar navbar-default navbar-fixed-bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-4 text-muted">&copy; Buzz&#8482; {{ date('now')|date('Y') }}</div>
                        <div class="col-xs-8 text-muted text-right">{{ fortune() }}</div>
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
